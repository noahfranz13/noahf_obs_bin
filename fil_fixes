#! /bin/csh

#AGBT16B_999_01: C-band
#
#blc05_*.0000.fil' 5813.96484235301613807678222656250000
#blc05_*.0001.fil' 5813.78173828125000000000000000000000
#blc05_*.0002.fil' 5813.96341323852539062500000000000000
#
#AGBT16B_999_0{2..3}: L-band
#
#blc05_*.0000.fil' 1313.96484235301613807678222656250000
#blc05_*.0001.fil' 1313.78173828125000000000000000000000
#blc05_*.0002.fil' 1313.96341323852539062500000000000000

set FIXEXE = ~mattl/git/filterbank/fix_fch1.py

foreach CBANDDIR (AGBT16B_999_01)
  cd /datax/dibas/$CBANDDIR/GUPPI/F/
  foreach i (`ls blc05_*.0000.fil`)
    echo $i; $FIXEXE $i 5813.96484235301613807678222656250000
  end
  foreach i (`ls blc05_*.0001.fil`)
    echo $i; $FIXEXE $i 5813.78173828125000000000000000000000
  end
  foreach i (`ls blc05_*.0002.fil`)
    echo $i; $FIXEXE $i 5813.96341323852539062500000000000000
  end
end

foreach LBANDDIR (AGBT16B_999_02 AGBT16B_999_03)
  cd /datax/dibas/$LBANDDIR/GUPPI/F/
  foreach i (`ls blc05_*.0000.fil`)
    echo $i; $FIXEXE $i 1313.96484235301613807678222656250000
  end
  foreach i (`ls blc05_*.0001.fil`)
    echo $i; $FIXEXE $i 1313.78173828125000000000000000000000
  end
  foreach i (`ls blc05_*.0002.fil`)
    echo $i; $FIXEXE $i 1313.96341323852539062500000000000000
  end
end

